<Window x:Class="Nlnet.Avalonia.Svg.Sample.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Nlnet.Avalonia.Svg.Controls;assembly=Nlnet.Avalonia.Svg"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sample="clr-namespace:Nlnet.Avalonia.Svg.Sample"
        Title="Avalonia.Svg.Sample"
        d:DesignHeight="450"
        d:DesignWidth="800"
        Background="#ffeeeeee"
        DragDrop.AllowDrop="True"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Design.DataContext>
        <sample:MainWindowViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="Auto,*">
        <ScrollViewer>
            <StackPanel>
                <Panel Width="256"
                       Height="256"
                       Margin="5">
                    <Border Background="black" Opacity="{Binding #BackGroundOpacity.Value}" />
                    <controls:Icon ClipToBounds="{Binding #ClipToBounds.IsChecked}"
                                   IconSvgData="{Binding Path=EditableSvgData}"
                                   ShowRenderBounds="{Binding #ShowRenderBounds.IsChecked}" />
                </Panel>
                <ItemsControl Margin="20" Items="{Binding Path=SvgList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="sample:SvgFileItem">
                            <Grid RowDefinitions="Auto,*">
                                <TextBlock Text="{Binding Path=SvgFileName}" />
                                <Panel Grid.Row="1"
                                       Width="256"
                                       Height="256"
                                       Margin="5">
                                    <Border Background="black" Opacity="{Binding #BackGroundOpacity.Value}" />
                                    <controls:Icon ClipToBounds="{Binding #ClipToBounds.IsChecked}"
                                                   IconSvgData="{Binding Path=SvgData}"
                                                   ShowRenderBounds="{Binding #ShowRenderBounds.IsChecked}" />
                                </Panel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Column="1" RowDefinitions="Auto,*">
            <StackPanel Margin="12,12,12,0"
                        Orientation="Horizontal"
                        Spacing="10">
                <CheckBox Name="ShowRenderBounds" Content="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Name}" />
                <CheckBox Name="ClipToBounds" Content="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Name}" />
                <Slider Name="BackGroundOpacity"
                        Width="100"
                        Maximum="1"
                        Minimum="0"
                        Value="0.1" />
            </StackPanel>
            <TextBox x:Name="TextBox"
                     Grid.Row="1"
                     Margin="12"
                     AcceptsReturn="True"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                     Text="{Binding EditableSvgData}" />
        </Grid>

    </Grid>
</Window>
