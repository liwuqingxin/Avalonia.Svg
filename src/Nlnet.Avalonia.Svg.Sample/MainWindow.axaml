<Window x:Class="Nlnet.Avalonia.Svg.Sample.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Nlnet.Avalonia.Svg.Controls;assembly=Nlnet.Avalonia.Svg"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sample="clr-namespace:Nlnet.Avalonia.Svg.Sample"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        Title="Avalonia.Svg.Sample"
        d:DesignHeight="450"
        d:DesignWidth="800"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Design.DataContext>
        <sample:MainWindowViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="Auto,*">
        <ScrollViewer>
            <StackPanel>
                <Viewbox Width="256"
                         Height="256"
                         Stretch="Uniform">
                    <controls:Icon IconSvgData="{Binding Path=EditableSvgData}" ShowRenderBounds="True" />
                </Viewbox>
                <ItemsControl Margin="20" Items="{Binding Path=SvgList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="sample:SvgFileItem">
                            <Grid RowDefinitions="Auto,*">
                                <TextBlock Text="{Binding Path=SvgFileName}" />
                                <Border Grid.Row="1"
                                        Margin="5"
                                        BorderBrush="Green"
                                        BorderThickness="1">
                                    <Viewbox Width="256"
                                             Height="256"
                                             Stretch="Uniform">
                                        <controls:Icon IconSvgData="{Binding Path=SvgData}" ShowRenderBounds="True" />
                                    </Viewbox>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        <TextBox x:Name="TextBox"
                 Grid.Column="1"
                 Margin="12"
                 AcceptsReturn="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 Text="{Binding EditableSvgData}" />
        <StackPanel Grid.Column="1">
            <Border Width="100" Height="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="25,0" SpreadMethod="Pad">
                        <GradientStop Color="Green" Offset="0"/>
                        <GradientStop Color="Red" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border Width="100" Height="20">
				<Border.Background>
					<LinearGradientBrush StartPoint="0,0" EndPoint="25,0" SpreadMethod="Reflect">
						<GradientStop Color="Green" Offset="0"/>
						<GradientStop Color="Red" Offset="1"/>
					</LinearGradientBrush>
				</Border.Background>
			</Border>
			<Border Width="100" Height="20">
                <Border.RenderTransform>
                    <TranslateTransform X="13"/>
                </Border.RenderTransform>
                <Border.Background>
					<LinearGradientBrush StartPoint="0,0" EndPoint="25,0" SpreadMethod="Repeat">
                        <GradientStop Color="Green" Offset="0"/>
                        <GradientStop Color="Red" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </StackPanel>
    </Grid>
</Window>
